
html
    head 
        title Client 

    body 
        h1 Page client
        
        a(href="/") Return dashboard
        
        br
        
        h3= person.firstName
        h3= person.lastName

        form(action='/add_movie', method='POST')
            span Withdrawn
                p
                    | Amount to withdrawn: 
                    input(type='number', name='amount_withdrawn', value='')
            
            span Depose
                p
                    | Amount to depose: 
                    input(type='number', name='amount_depose', value='')
            
            span Transfer
                p
                    | Person to transfer: 
                    select
                        each person in listPerson
                            option(value=person.firstName) #{person.firstName}
                p
                    | Amount to transfer: 
                    input(type='number', name='amount_transfer', value='')
            
            input(type='submit', value='Submit')
